html(lang="en")

	head
		include modules/head.pug		
	body
		.content-wrp
			section.top-line
				header.header
					a.logo(href="#") iWrite
					nav
						ul.nav
							li.nav__item 
								a.active(href="#") Orders
							li.nav__item 
								a(href="#") Support
							li.nav__item 
								a(href="#") Profile
							li.nav__item 
								a(href="#") Balance

						.user-nav
							.add-order 
								span.icon-plus.add-order__icon
								|New order
							.like.icons.icon-heart
							.notice.icon-bell
								+user_online
							.member
								.member-icon.icon-user
								ul.member-menu
									li
										a(href="#") Log out
									li
										a(href="#") Newsletters

			.content
				.options
					ul.options__nav
						li.active Recent 
						li Finished 
						li Canceled
					.options__sort Sorted by 
						span ID
				.options__info
					.options__head
						ul
							li.col-name Title
							li.col-date Deadline
							li.col-state Status
							li.col-assigned Assigned to
							li.col-cost Price / Paid
							li.col-id ID

					.options__body
						.order#order-template(style="display:none;")

							.order__name
								div.order__title
								div.order__category

							.order__date
								div.order__deadline
								div.order__timeleft

							.order__state
								.order__status
								.order__status-bar.status-bar
									.status-bar__inner

							.order__assigned
								.order__icon
									.order__img
										+user_online
								.order__user
									.order__username
									.order__rate
										.icon-star.status-icon

							.order__cost
								.order__price
								.order__paid

							.order__id

		include modules/scripts.pug